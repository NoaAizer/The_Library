<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserDetailsActivity">

    <TextView
        android:id="@+id/bookDetailsHeader"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="43dp"
        android:gravity="right|center_vertical"
        android:text="פרטי הספר"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/hedBookName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="16dp"
        android:gravity="right|center_vertical"
        android:text=""
        android:textColor="#00838F"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hedBookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="16dp"
        android:gravity="right|center_vertical"
        android:text="מחבר:  "
        android:textColor="#00838F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookDetailsHeader" />

    <TextView
        android:id="@+id/detBookAuthor"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="4dp"
        android:gravity="right|center_vertical"
        android:textColor="#040A0B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hedBookAuthor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hedBookGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:gravity="right|center_vertical"
        android:text="ז'אנר:  "
        android:textColor="#00838F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hedBookAuthor" />

    <TextView
        android:id="@+id/detBookGenre"
        android:layout_width="217dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:gravity="right|center_vertical"
        android:textColor="#040A0B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hedBookGenre"
        app:layout_constraintTop_toBottomOf="@+id/hedBookAuthor" />

    <TextView
        android:id="@+id/hedBookYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="right|center_vertical"
        android:text="שנת הוצאה:  "
        android:textColor="#00838F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hedBookGenre" />

    <TextView
        android:id="@+id/detBookYear"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="4dp"
        android:gravity="right|center_vertical"
        android:textColor="#040A0B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hedBookYear"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hedBookLan"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:gravity="right|center_vertical"
        android:text="שפה:  "
        android:textColor="#00838F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hedBookYear" />

    <TextView
        android:id="@+id/detBookLan"
        android:layout_width="217dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"
        android:gravity="right|center_vertical"
        android:textColor="#040A0B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hedBookLan"
        app:layout_constraintTop_toBottomOf="@+id/hedBookYear" />


    <TextView
        android:id="@+id/hedBookBrief"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:gravity="right|center_vertical"
        android:text="תקציר:  "
        android:textColor="#00838F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hedBookLan" />


    <TextView
        android:id="@+id/detBookBrief"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:gravity="right|center_vertical"
        android:textColor="#040A0B"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detBookLan" />

    <TextView
        android:id="@+id/hedBookAmount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="48dp"
        android:gravity="right|center_vertical"
        android:text="כמות במלאי:  "
        android:textColor="#101010"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/detBookAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="46dp"
        android:gravity="right|center_vertical"
        android:textColor="#040A0B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hedBookAmount" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backToUserMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="27dp"
        android:clickable="true"
        android:foregroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:tint="#FFFFFF"
        app:backgroundTint="#00838F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#FFFFFF"
        app:srcCompat="@android:drawable/ic_menu_revert" />

</androidx.constraintlayout.widget.ConstraintLayout>