<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.MenuUserActivity">


    <TextView
        android:id="@+id/hello"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="30dp"
        android:gravity="right|center_vertical"
        android:text="שלום "
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/menuRatingBooks"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/menuRatingBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="10dp"
        android:text="המומלצים "
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/menuImageRating"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/menuNewBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="10dp"
        android:gravity="right|center_vertical"
        android:text="החדשים "
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/menuImageNew"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/searchAbook"
        android:layout_width="188dp"
        android:layout_height="100dp"
        android:text="חיפוש ספר"
        android:textColor="@color/white"
        android:drawableLeft="@android:drawable/ic_menu_search"
        app:layout_constraintBottom_toTopOf="@+id/checkALoan"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/userDetails"
        android:layout_width="188dp"
        android:layout_height="100dp"
        android:drawableLeft="@drawable/bt_ic_cardholder_name_dark"
        android:text="איזור אישי"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/myBooks"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/myBooks"
        android:layout_width="188dp"
        android:layout_height="100dp"
        android:drawableLeft="@drawable/icon_book"
        android:text="ההשאלות שלי"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/checkALoan"
        android:layout_width="188dp"
        android:layout_height="100dp"
        android:text="מעקב אחר הזמנה"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/icon_orders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/menuImageNew"
        android:layout_width="140dp"
        android:layout_height="201dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/searchAbook"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/menuImageRating"
        android:layout_width="140dp"
        android:layout_height="201dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/userDetails"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>