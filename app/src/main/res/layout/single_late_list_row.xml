<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/singleOrderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="מספר הזמנה: "
        android:textColor="#00838F"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/singleFlName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="שם: "
        android:textColor="#00838F"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/singlePhonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="טלפון: "
        android:textColor="#00838F"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/singleEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="תאריך סיום השאלה: "
        android:textColor="#00838F"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/singleListBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="רשימת ספרים: "
        android:textColor="#00838F"
        android:textSize="15dp" />
</LinearLayout>