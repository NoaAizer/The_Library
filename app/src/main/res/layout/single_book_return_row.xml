<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>

    <Button
        android:id="@+id/returnBookBtn"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:clickable="true"
        android:text="החזר ספר"
        app:srcCompat="@android:drawable/list_selector_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/singleReturnAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="         "
                android:textColor="#00838F"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/singleReturnName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#00838F"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/singleReturnOrderID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="מספר הזמנה: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/singleReturnStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="סטטוס הזמנה: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/singleReturnDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="תאריך סיום השאלה: "
            android:textSize="15dp" />


    </LinearLayout>
</LinearLayout>


