<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/singelOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/singelOrderHed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="מספר הזמנה: "
            android:textColor="#00838F"
            android:textSize="15dp"
            android:textStyle="bold"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/singleAddedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/singleAddedDatesHed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="תאריך הזמנה: "
            android:textColor="#00838F"
            android:textSize="15dp"
            android:textStyle="bold"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="2dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/singleStatusHed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="מצב הזמנה: "
            android:textColor="#00838F"
            android:textSize="15dp"
            android:textStyle="bold"/>



    </LinearLayout>
    <TextView
        android:id="@+id/singleStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="2dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/userTZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/userTZHed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תז מנוי: "
            android:textColor="#00838F"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="2dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/userPhoneHed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="טלפון מנוי: "
            android:textColor="#00838F"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>