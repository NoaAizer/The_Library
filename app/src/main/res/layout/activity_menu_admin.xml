<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    tools:context=".activities.MenuAdminActivity">

    <TextView
        android:id="@+id/helloAdmin"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:gravity="right|center_vertical"
        android:text="שלום,"
        android:textColor="@color/blue2"
        android:fontFamily="@font/abraham"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

    <Button
        android:id="@+id/clientsList"
        android:layout_width="167dp"
        android:layout_height="109dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:drawableLeft="@drawable/bt_ic_cardholder_name_dark"
        android:text="רשימת מנויים"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booksList" />


    <Button
        android:id="@+id/laterList"
        android:layout_width="167dp"
        android:layout_height="109dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:drawableLeft="@drawable/icon_hurry"
        android:text="רשימת מאחרים"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loansList" />

    <Button
        android:id="@+id/loansList"
        android:layout_width="167dp"
        android:layout_height="109dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="28dp"
        android:drawableLeft="@drawable/icon_cart"
        android:text="מרכז ההזמנות"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helloAdmin" />

    <Button
        android:id="@+id/booksList"
        android:layout_width="167dp"
        android:layout_height="109dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:drawableLeft="@drawable/icon_books"
        android:text="מאגר הספרים"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helloAdmin" />

    <Button
        android:id="@+id/returnBook"
        android:layout_width="167dp"
        android:layout_height="109dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:drawableLeft="@drawable/icon_book"
        android:text="החזרת ספרים"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/laterList" />

    <Button
        android:id="@+id/adding"
        android:layout_width="167dp"
        android:layout_height="109dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:drawableLeft="@drawable/icon_plus"
        android:text="הוספת ספר"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientsList" />


</androidx.constraintlayout.widget.ConstraintLayout>