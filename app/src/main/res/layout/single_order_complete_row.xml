<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/singleCOrderID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:textColor="@color/purple_500"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/single_orderIdHed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="מספר הזמנה: "
            android:textColor="#00838F"
            android:textSize="18dp"
            android:textStyle="bold"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="2dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/singleCType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/singleCTypeHed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="סוג הזמנה: "
            android:textColor="#00838F"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="2dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/singleCDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/single_dateHed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תאריך סיום השאלה: "
            android:textColor="#00838F"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="2dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/singleCUserID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/single_tzHed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ת.ז מנוי: "
            android:textColor="#00838F"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>








